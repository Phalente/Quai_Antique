{% extends 'base.html.twig' %}

{% block title %}Réservez votre table
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center mt-4">Réservez votre table</h1>
        <p class="text-center"> Attention : Pour tout retard de plus de 20 min votre table sera données 
            à d'autres clients
        </p>

        {{ form_start(formReservation) }}
        {{ form_row(formReservation.Date) }}
        {{ form_row(formReservation.time_slot) }}
        {{ form_end(formReservation) }}

    {% endblock %}
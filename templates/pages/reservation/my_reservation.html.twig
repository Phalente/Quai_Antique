{% extends 'base.html.twig' %}

{% block title %}Réservez votre table
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class='text-center mt-4'>Mes Réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Reservation n°</th>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Nombre de personne(s)</th>
                    <th scope="col">Allergie(s)</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                <tr class="table-active">
                        <th scope="row">{{ reservation.id }}</th>
                        <td>{{ reservation.date|date('d/m/Y') }}</td>
                        <td>{{ reservation.hour|date('H:i') }}</td>
                        <td>{{ reservation.Numberofcovers }}</td>
                        <td>{{ reservation.allergies|join(', ') }}</td>
                {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
    {% endblock %}
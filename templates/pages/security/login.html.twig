{% extends 'base.html.twig' %}
{% block title %}Quai Antique - Connexion
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class='mt-4'>Connexion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger mt-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label">Adresse email</label>
                <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@quaiant.com" value="{{ last_username }}">
                </div>
                <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="*******">
            </div>
            <button type="submit" class="btn btn-info color-99CC5B mt-4">
                Se connecter
            </button>
            <a  class="btn btn-info mt-4" href="{{ path('security.registration')}}">
                S'inscrire
            </a>
        </form>
    </div>
{% endblock %}